@using System.Web.Optimization
@using System.Web.UI.WebControls
@using System.Linq;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>Klinik - Clinic Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <title>eUseSystem | @ViewBag.Title </title>
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&amp;family=Roboto:wght@500;700;900&amp;display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    @Styles.Render("~/bundles/animate/css")
    @Styles.Render("~/bundles/owlcarouselmin/css")
    @Styles.Render("~/bundles/tempusdominus-bootstrap-4-min/css")

    <!-- Customized Bootstrap Stylesheet -->
    @Styles.Render("~/bundles/bootstrap/css")

    <!-- Template Stylesheet -->
    @Styles.Render("~/bundles/style/css")

</head>
<body>
    <div class="wrapper">
        
        <!-- Topbar -->
        <section id="topbar">
            @Html.Partial("_Topbar")
        </section>

        <!-- Navbar -->
        <section id="navbar">
            @Html.Partial("_Navbar")
        </section>

        <!-- Header -->
        <section id="header">
            @Html.Partial("_Header")
        </section>

        <!-- About -->
        <section id="about">
            @Html.Partial("_About")
        </section>

        <!-- Service -->
        <section id="service">
            @Html.Partial("_Service")
        </section>

        <!-- Feature -->
        <section id="feature">
            @Html.Partial("_Feature")
        </section>

        <!-- Team -->
        <section id="team">
            @Html.Partial("_Team")
        </section>

        <!-- Appointment -->
        <section id="appointment">
            @Html.Partial("_Appointment")
        </section>

        <!-- Testimonial -->
        <section id="testimonial">
            @Html.Partial("_Testimonial")
        </section>

        <!-- Footer -->
        <section id="footer">
            @Html.Partial("_Footer")
        </section>

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>

        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

        @Scripts.Render("~/bundles/jquery/js")
        @Scripts.Render("~/bundles/wow/js")
        @Scripts.Render("~/bundles/easing/js")
        @Scripts.Render("~/bundles/waypoints/js")
        @Scripts.Render("~/bundles/counterup/js")
        @Scripts.Render("~/bundles/owl-carousel-min/js")
        @Scripts.Render("~/bundles/tempusdominus/js")

        @Scripts.Render("~/bundles/main/js")

        @RenderSection("scripts", required: false)
    </div>
    @RenderBody()
</body>
</html>
