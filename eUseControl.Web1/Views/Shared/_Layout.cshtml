@using System.Web.Optimization
@using System.Web.UI.WebControls
@using System.Linq;

<!DOCTYPE html>

<html>
<head>
     <meta charset="utf-8">
     <title>Clinică</title>
     <meta content="width=device-width, initial-scale=1.0" name="viewport">
     <meta content="" name="keywords">
     <meta content="" name="description">
     <title>eUseSystem | @ViewBag.Title </title>
     <!-- Favicon -->
     <link href="~/Content/img/favicon.png" rel="icon">

     <!-- Google Web Fonts -->
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
     <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&amp;family=Roboto:wght@500;700;900&amp;display=swap" rel="stylesheet">

     <!-- Icon Font Stylesheet -->
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

     <!-- Libraries Stylesheet -->
     @Styles.Render("~/bundles/animate/css")
     @Styles.Render("~/bundles/owlcarouselmin/css")
     @Styles.Render("~/bundles/tempusdominus-bootstrap-4-min/css")

     <!-- Customized Bootstrap Stylesheet -->
     @Styles.Render("~/bundles/bootstrap/css")

     <!-- Template Stylesheet -->
     @Styles.Render("~/bundles/style/css")
</head>
<body>
     <section class="wrapper">
          <!-- Topbar -->
          <div class="container-fluid bg-light p-0 wow fadeIn" data-wow-delay="0.1s">
               @Html.Partial("_Topbar")
          </div>

          <!-- Navbar -->
          <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0 wow fadeIn" data-wow-delay="0.1s">
               @Html.Partial("_Navbar")

          </nav>

          <section class="content">
               @RenderBody()
          </section>

          <!-- Footer -->
          <div class="container-fluid bg-dark text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
               @Html.Partial("_Footer")
          </div>

          <!-- Back to Top -->
          <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


          <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

          @Scripts.Render("~/bundles/jquery/js")
          @Scripts.Render("~/bundles/wow/js")
          @Scripts.Render("~/bundles/easing/js")
          @Scripts.Render("~/bundles/waypoints/js")
          @Scripts.Render("~/bundles/counterup/js")
          @Scripts.Render("~/bundles/owl-carousel-min/js")
          @Scripts.Render("~/bundles/tempusdominus/js")

          @Scripts.Render("~/bundles/main/js")

          @RenderSection("scripts", required: false)
     </section>
</body>
</html>
