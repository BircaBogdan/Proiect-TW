@model eUseControl.Web1.Models.Programare

@{
    ViewBag.Title = "Programare";
}

<div class="container-center animated fadeInUp" style="margin-top: 40px;">
    <div class="panel panel-filled">
        <div class="panel-body">
            <h3>Formular Programare Medicală</h3>
            @using (Html.BeginForm("Trimite", "Programare", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Nume, new { @class = "form-control", placeholder = "Nume", required = "required", autocomplete = "off" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Prenume, new { @class = "form-control", placeholder = "Prenume", required = "required", autocomplete = "off" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control", placeholder = "Telefon", required = "required", autocomplete = "off" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.DataProgramare, "{0:yyyy-MM-ddTHH:mm}", new { @type = "datetime-local", @class = "form-control", required = "required" })
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Serviciu, new SelectList(new[] {
                        "Cardiologie", "Dermatologie", "ORL", "Altul"
                    }), new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Trimite Programare</button>
            }
        </div>
    </div>
</div>
